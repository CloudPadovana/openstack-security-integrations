ln -sf /usr/share/openstack-dashboard/openstack_dashboard/dashboards/admin/projects/templates/projects \
       /usr/share/openstack-dashboard/openstack_dashboard/dashboards/admin/project_manager/templates/project_manager





%triggerin -n openstack-auth-shib -- openstack-dashboard
if [ ! $1 == 2 ]; then
    #
    # Compressing aai_infn_integrations
    #
    echo "Compressing style-sheets ..."
    python /usr/share/openstack-dashboard/manage.py compress -v 0 >/dev/null 2>&1
    #
    # Register the new backend driver
    #
    sed -i -e 's|openstack_auth.backend.KeystoneBackend|openstack_auth_shib.backend.ExtKeystoneBackend|g' \
    /usr/share/openstack-dashboard/openstack_dashboard/settings.py
    #
    # Register the views wrapper
    #
    sed -i -e 's|openstack_auth.urls|openstack_auth_shib.urls|g' \
        /usr/share/openstack-dashboard/openstack_dashboard/urls.py
    #
    # Register as an installed application
    #
    sed -i -e "s|openstack_auth[\']|openstack_auth_shib\'|g" \
        /usr/share/openstack-dashboard/openstack_dashboard/settings.py
    #
    # Insert customization point
    #
    echo -e "HORIZON_CONFIG[\"customization_module\"] = \"openstack_auth_shib.overrides\"\n" \
        >> /etc/openstack-dashboard/local_settings
    
    #
    # Replace logo
    #
    if [ ! -e /usr/share/openstack-dashboard/static/dashboard/img/logo-orig.png ] ; then
        mv -f /usr/share/openstack-dashboard/static/dashboard/img/logo.png \
            /usr/share/openstack-dashboard/static/dashboard/img/logo-orig.png
    fi
    cp -f /usr/share/openstack-dashboard/static/dashboard/img/logoCloudAreapd.png \
        /usr/share/openstack-dashboard/static/dashboard/img/logo.png
    
    if [ ! -e /usr/share/openstack-dashboard/static/dashboard/img/logo-splash-orig.png ] ; then
        mv -f /usr/share/openstack-dashboard/static/dashboard/img/logo-splash.png \
            /usr/share/openstack-dashboard/static/dashboard/img/logo-splash-orig.png
    fi
    cp -f /usr/share/openstack-dashboard/static/dashboard/img/logoCloudAreapd.png \
        /usr/share/openstack-dashboard/static/dashboard/img/logo-splash.png
fi

%triggerun -n openstack-auth-shib -- openstack-dashboard
if [ $1 == 0 -o $2 == 0 ] ; then
    sed -i -e 's|openstack_auth_shib.backend.ExtKeystoneBackend|openstack_auth.backend.KeystoneBackend|g' \
        /usr/share/openstack-dashboard/openstack_dashboard/settings.py
    sed -i -e 's|openstack_auth_shib.urls|openstack_auth.urls|g' \
    /usr/share/openstack-dashboard/openstack_dashboard/urls.py
    sed -i -e "s|openstack_auth_shib[\']|openstack_auth\'|g" \
        /usr/share/openstack-dashboard/openstack_dashboard/settings.py
    sed -i -e 's|HORIZON_CONFIG\[\"customization_module\"\].*||g' \
        /etc/openstack-dashboard/local_settings
    if [ -e /usr/share/openstack-dashboard/static/dashboard/img/logo-orig.png ] ; then
        mv -f /usr/share/openstack-dashboard/static/dashboard/img/logo-orig.png \
            /usr/share/openstack-dashboard/static/dashboard/img/logo.png
    fi
    if [ -e /usr/share/openstack-dashboard/static/dashboard/img/logo-splash-orig.png ] ; then
        mv -f /usr/share/openstack-dashboard/static/dashboard/img/logo-splash-orig.png \
            /usr/share/openstack-dashboard/static/dashboard/img/logo-splash.png
    fi
fi


