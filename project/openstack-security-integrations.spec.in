%if %{?rhel}%{!?rhel:0} >= 8
%global __python /usr/bin/python3
%global python_sitelib /usr/lib/python3.6/site-packages
%global python_sitearch /usr/lib64/python3.6/site-packages
%else
%global __python /usr/bin/python2
%global python_sitelib /usr/lib/python2.7/site-packages
%global python_sitearch /usr/lib64/python2.7/site-packages
%endif

%global os_dashboard_dir /usr/share/openstack-dashboard/openstack_dashboard

Summary: Shibboleth-Openstack integrations
Name: openstack-security-integrations
Version: @PKGVERSION@
Release: @PKGRELEASE@%{?dist}
License: Apache Software License
Vendor: EMI
URL: http://glite.cern.ch/
Group: Applications/Internet
BuildArch: noarch
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
AutoReqProv: yes
Source: %{name}.tar.gz


%description
Shibboleth-Openstack integrations.

%prep

%setup -c -q

%build

%install
rm -rf %{buildroot}
mkdir -p %{buildroot}
%{__python} setup.py install -O1 --prefix %{buildroot}/usr --install-data %{buildroot}

mv %{buildroot}/%{python_sitelib}/idmanager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager
   
mv %{buildroot}/%{python_sitelib}/registration_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager/registration_manager

mv %{buildroot}/%{python_sitelib}/subscription_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager/subscription_manager

mv %{buildroot}/%{python_sitelib}/member_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager/member_manager

mv %{buildroot}/%{python_sitelib}/project_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager/project_manager

mv %{buildroot}/%{python_sitelib}/user_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager/user_manager

mv %{buildroot}/%{python_sitelib}/log_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager/log_manager

mv %{buildroot}/%{python_sitelib}/project_requests/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/idmanager/project_requests

mv %{buildroot}/%{python_sitelib}/password_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/settings/password_manager

mv %{buildroot}/%{python_sitelib}/api_access_manager/* \
   %{buildroot}%{os_dashboard_dir}/dashboards/project/api_access_manager

mkdir -p %{buildroot}/%{python_sitelib}/horizon/management/commands
mv %{buildroot}/%{python_sitelib}/commands/* \
   %{buildroot}/%{python_sitelib}/horizon/management/commands/

mkdir -p %{buildroot}/etc/openstack-auth-shib/notifications

mkdir -p %{buildroot}%{os_dashboard_dir}/local/local_settings.d
mv %{buildroot}/%{python_sitelib}/dashboard_conf/_1000_* \
    %{buildroot}%{os_dashboard_dir}/local/local_settings.d

mkdir -p %{buildroot}%{os_dashboard_dir}/enabled
rm %{buildroot}/%{python_sitelib}/dashboard_conf/_18*.py*
mv %{buildroot}/%{python_sitelib}/dashboard_conf/_*.py* \
   %{buildroot}%{os_dashboard_dir}/enabled
   
rm -rf %{buildroot}/%{python_sitelib}/dashboard_conf

mkdir -p %{buildroot}/var/cache/openstack-auth-shib/msg

%clean
rm -rf %{buildroot}





