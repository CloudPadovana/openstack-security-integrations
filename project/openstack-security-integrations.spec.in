%description
Shibboleth-Openstack integrations.

%prep

%setup -c -q

%build

%install
rm -rf %{buildroot}
mkdir -p %{buildroot}
python setup.py install -O1 --prefix %{buildroot}/usr --install-data %{buildroot}
mv %{buildroot}/%{python_sitelib}/registration_manager/* \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/identity/registration_manager
rm -rf %{buildroot}/%{python_sitelib}/registration_manager
mv %{buildroot}/%{python_sitelib}/subscription_manager/* \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/identity/subscription_manager
rm -rf %{buildroot}/%{python_sitelib}/subscription_manager
mv %{buildroot}/%{python_sitelib}/member_manager/* \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/identity/member_manager
rm -rf %{buildroot}/%{python_sitelib}/member_manager
mv %{buildroot}/%{python_sitelib}/project_manager \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/identity
mv %{buildroot}/%{python_sitelib}/user_manager/* \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/identity/user_manager
rm -rf %{buildroot}/%{python_sitelib}/user_manager
mv %{buildroot}/%{python_sitelib}/password_manager/* \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/settings/password_manager
rm -rf %{buildroot}/%{python_sitelib}/password_manager
mv %{buildroot}/%{python_sitelib}/project_requests/* \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/identity/project_requests
rm -rf %{buildroot}/%{python_sitelib}/project_requests
mv %{buildroot}/%{python_sitelib}/idp_requests/* \
   %{buildroot}/usr/share/openstack-dashboard/openstack_dashboard/dashboards/identity/idp_requests
rm -rf %{buildroot}/%{python_sitelib}/idp_requests
mkdir -p %{buildroot}/%{python_sitelib}/horizon/management/commands
mv %{buildroot}/%{python_sitelib}/commands/* \
   %{buildroot}/%{python_sitelib}/horizon/management/commands/
rm -rf %{buildroot}/%{python_sitelib}/commands
mkdir -p %{buildroot}/etc/openstack-auth-shib/notifications
cp %{buildroot}/usr/share/openstack-auth-shib/templates/notifications_*.txt \
   %{buildroot}/etc/openstack-auth-shib/notifications


%clean
rm -rf %{buildroot}





